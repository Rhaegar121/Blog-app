<h1>Welcome to <%= @post.author.name %>'s post</h1>

<section class="container">
    <div class="post">
        <h3><%= @post.title %> by <%= @post.author.name %></h3>
        <div class="counter">
            <span>Comments: <%= @post.comments_counter %>, </span>
            <span>Likes: <%= @post.likes_counter %> </span>
        </div>
        <p><%= @post.text %></p>
    </div>
    <div class="comment">
        <% @post.comments.includes(:author).includes(:post).each do |comment| %>
            <p><%= comment.author.name %>: <%= comment.text %></p>
        <% end %> 
    </div>
    <%= link_to "Add a comment", user_post_comments_path(user_id: @post.author_id, post_id: @post.id), class: "btn" %>
</section>
