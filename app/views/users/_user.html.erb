<!-- _user.html.erb -->
<%= link_to user do %>
    <li class="card">
        <div class="img">
          <img src="<%= user.photo %>" alt="user photo" width="100%" height="100%">
        </div>
        <div class="content">
          <h2><%= user.name %></h2>
          <p>Number of posts: <%= user.posts_counter %></p>
        </div>
    </li>
<% end %>
