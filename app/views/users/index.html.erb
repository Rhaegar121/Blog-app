<h1>Welcome to Users page</h1>

<div class="container">
    <ul>
        <% @users.each do |user| %>
            <%= link_to user do %>
                <li class="card">
                    <div class="img">
                        <img src=<%= user.photo %> alt="user photo" width="100%" height="100%">
                    </div>
                    <div class="content">
                        <h2><%= user.name %></h2>
                        <p>Number of post: <%= user.posts_counter %></p>
                    </div>
                </li>
            <% end %>
        <% end %>
    </ul>
</div>