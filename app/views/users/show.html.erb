<section class="container">
    <div class="card">
        <div class="img">
            <img src=<%= @user.photo %> alt="user photo" width="100%" height="100%">
        </div>
        <div class="content">
            <h2><%= @user.name %></h2>
            <p>Number of post: <%= @user.posts_counter %></p>
        </div>
    </div>
    <div class="bio">
        <h3>Bio</h3>
        <p><%= @user.bio %></p>
    </div>
</section>
<section class="container">
    <h2 class="posts">Posts</h2>
    <ul>
        <% @user.recent_post.each do |post| %>
            <%= link_to user_post_path(user_id: post.author_id, id: post.id) do %>
                <li class="post">
                    <h3><%= post.title %></h3>
                    <p><%= post.text %></p>
                    <div class="counter">
                        <span>Comments: <%= post.comments_counter %>, </span>
                        <span>Likes: <%= post.likes_counter %> </span>
                    </div>
                </li>
            <% end %>
        <% end %>
    </ul>
    <%= link_to "See all posts", user_posts_path(user_id: @user.id), class: "btn" %>
</section>